# ============================================
# EduPhysics Academy - Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control!
# ============================================

# MongoDB Atlas Connection String
# Get this from: MongoDB Atlas → Database → Connect → Drivers
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.tq9cwoq.mongodb.net/eduphysics?appName=Cluster0

# Frontend URL (for CORS configuration)
# Update this with your Vercel deployment URL
FRONTEND_URL=https://your-app.vercel.app

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5000

# Cloudinary Configuration (for image uploads)
# Get these from: Cloudinary Dashboard → Account Details
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Admin Credentials (change in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
